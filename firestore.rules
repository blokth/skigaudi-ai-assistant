rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // FAQ collection rules
    match /faqs/{faqId} {
      // Public reads
      allow read: if true;
      // Authenticated users signed in with any provider except anonymous may write
      allow write: if request.auth != null && request.auth.token.firebase.sign_in_provider != "anonymous";
    }

    // Temporary broad access for all other documents (expires 2025-08-16)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 8, 16);
    }
  }
}
